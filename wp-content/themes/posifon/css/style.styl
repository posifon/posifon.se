// animated container
@keyframes updown {
    0%{
        transform: translateY(0px);
    }
    50%{
        transform: translateY(-10px);
    }
    100%{
        transform: translateY(0px);
    }
}

@-webkit-keyframes updown {
    0%{
        -webkit-transform: translateY(0px);
    }
    50%{
        -webkit-transform: translateY(-10px);
    }
    100%{
        -webkit-transform: translateY(0px);
    }
}

#arrow
  position absolute
  z-index 1
  bottom 10%
  left 0
  width 100%
  z-index 99
  animation: updown 1s ease-in-out infinite;
  -webkit-animation: updown 1s ease-in-out infinite;
  +ie(8)
    bottom: 2%
  +below('s')
    display none
  a
    display block
    width: 6rem
    height: 5rem
    margin auto
    background-image: url(../img/arrow.png);
    background-image: 
    linear-gradient(transparent, transparent),
    url(../img/arrow.min.svg);
    background-size contain
    background-repeat no-repeat


// Print styles ...........................................
@media print
  *
    overflow visible !important
  header 
    display none
  footer
    display none
  html
    font-size: 62.5%
    font-family "Times", serif
  body
    background-color #FFF
    color #000
  p, h1, h2, h3, h4, h5, h6
    color #000
  .card
    padding 0
    margin 0
    border-radius 0
    background transparent
    box-shadow none
    border none
    >h1, > h2,> h3, .margin > h1, .margin > h2, .margin > h3
      &:first-child
        text-align left
    &.border
      border-bottom none
  .card-image
    -webkit-print-color-adjust exact
    margin 0
    margin-top 1rem
    background-position top left
    &.cover
      background-size contain
  .wrap960
    width 100%
  #content, #aside, .col, .row
    stack()
    display inline
  section
    display block
    min-height 0
    height auto
    padding 0
    margin 0
    &.background-image, &.blank
      height auto
      padding 0
      margin 0
      min-height 0
    &.background-image
      height 100vh
      background-size contain
      background-position top center
  #arrow
    display none
  .text-overlay
    width 100%
    padding-top 10rem
    display inline
    position absolute
    bottom 0
    h1
      text-align center
    .first-page-col
      stack()
  .expander-content
    display inline
  .kunskap-content
    display inline
  .center
    text-align left
  .tab-box
    display block
    .tab-nav
      display none
    .tab-content
      display inline !important