// Form specifics
// kontakta mig

#form_kontakta_mig //kontakta mig formulär i footer
  input[type="text"], input[type="email"], input[type="tel"], input[type="number"]
    border-radius .2rem
    padding .3rem
    margin-bottom 1rem
    width 100%
    border none
    &:focus
      outline 0
  input[type="submit"]
    font-size 1rem
    border-radius .2rem
    padding .3rem
    margin-bottom 1rem
    border none
    &:focus
      outline 0

// besällningsformulär

#form_kontakt
  fieldset
    border none
    float none
    button
      margin-top 1rem

  legend
    @extend h3
    margin-top .5rem

  label
    font-size 1.7rem
    display block
    padding-top .5rem

  .wpcf7-not-valid-tip
    color $posifon-red

  .wpcf7-validation-errors
    color $posifon-red

  .wpcf7-response-output
    font-size 1.7rem

  input[type="text"], input[type="email"], input[type="tel"], input[type="number"], textarea
    @extend p
    display: block;
    margin 0;
    width: 100%
    color $posifon-blue
    appearance: none
    box-shadow: none
    border-radius: none
    background-color transparent
    padding: 0;
    border none
    border-bottom: 3px solid #c9c9c9;
    transition: 0.3s;
    &:focus
      outline: none
      border-bottom: 3px solid $posifon-blue;
    &:focus ~ label
      color: black
  textarea
    margin-top 1rem
    border: 3px solid #c9c9c9;
    &:focus
      border: 3px solid $posifon-blue;
      
#form_bestall, #form_bestall_omsorg
  fieldset
    border none
    float none
    button
      margin-top 1rem

  legend
    @extend h4

  label
    @extend p
    display block
    &.clonetext
      text-transform capitalize
      font-weight 500

  .alternativ_content
    padding-left 2rem;

  .wpcf7-not-valid-tip
    color $posifon-red

  .wpcf7-validation-errors
    color $posifon-red

  .wpcf7-response-output
    font-size 1.7rem

  #enhet, #abonnemang, #faktura
    cf()
    >label
      stack()
    span>label
      float left
      width 10rem
      height 11rem
      margin-left 2rem
      line-height 0
      +ie(8)
        height auto
        line-height auto
      html.no-svg &
        height auto
        line-height auto
      >span // Kvadrater vars bakgrundsbild justeras i beställningsformuläret.
        display block
        width 10rem
        height 10rem
        line-height 1.1
        font-size 1.5rem
        text-align center
        background-size: 6rem auto
        background-position center center
        background-repeat no-repeat
        opacity 0.5
        border none
        border-bottom: 3px solid $posifon-lightgrey;
        &:hover
          opacity 1
    input[type="radio"]:checked + span
      outline: none
      border-bottom: 3px solid $posifon-blue;
      opacity 1
    input[type="radio"]
      display: none
      +ie(8)
        display inline
      html.no-svg &
        display inline
  #faktura, #abonnemang, #telenat // Mindre bilder ser snyggare ut för dessa
    label
      >span
        background-size: 4rem auto

  input[type="text"], input[type="email"], input[type="tel"], input[type="number"], textarea
    display: block;
    margin 0;
    width: 100%
    font-size 1.7rem
    line-height 1.5
    color $posifon-blue
    appearance: none
    box-shadow: none
    border-radius: none
    background-color transparent
    padding: 0;
    border none
    border-bottom: 3px solid #c9c9c9;
    transition: 0.3s;
    &:focus
      outline: none
      border-bottom: 3px solid $posifon-blue;
    &:focus ~ label
      color: black
  textarea
    margin-top 1rem
    height 10rem
    border: 3px solid #c9c9c9;
    &:focus
      border: 3px solid $posifon-blue;

  input[type="submit"]
    margin-top 1rem
    &:focus
      outline 0

.expander-content
  display none;

.kunskap-container
  overflow hidden
  position relative
  &:hover
    cursor default
    h3
      cursor pointer
  .arrow, .x
    position absolute
    top 2.8rem
    right 2rem
    height 3rem
    width 2.5rem
    z-index 99
    background-size contain
    background-repeat no-repeat
  .arrow
    background-image: url(../img/arrow.bluegrey.png);
    background-image: 
    linear-gradient(transparent, transparent),
    url(../img/arrow.bluegrey.min.svg);
  .x
    background-image: url(../img/x.bluegrey.png);
    background-image: 
    linear-gradient(transparent, transparent),
    url(../img/x.bluegrey.min.svg);
  .expanded
    display none
  .kunskap-title
    col(9/10)
  .kunskap-content
    display none
    span(1)
    img
      col(1/6)
      height auto
    .kunskap-text
      col(5/6)
      padding-left 2rem
    .kunskap-link
      col(1/6)

.widget_links h3 //remove header from Samarbetspartners (and other link widgets)
  display none

$footer-height = 30rem
#page-footer
  padding-top 1rem
  background-color $posifon-blue
  color white
  a, p, h1, h2, h3
    color inherit
  a:hover
    text-decoration underline
  .widget-area
    col(1/3)
    &:nth-child(3)
      margin-right 0
    +ie(8)
      span(1/3)
      margin 0
      float left;
  ul
    list-style-type none

#copyright
  stack()
  text-align center
  p
    line-height 4rem
    font-size 1.2rem

